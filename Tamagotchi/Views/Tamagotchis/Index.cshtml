@using Tamagotchi.Models;

<h1>Tamagotchi World</h1>
<ul>

  @if (Model.Count == 0)
  {
    <p>You have no tamagotchis or they all passed away.</p>

  }
  @if (Model.Count > 0)
  {
    @foreach (Tamagotchi pet in Model)
    {
      <li><a href="/tamagotchis/@tamagotchi.GetId()">@tamagotchi.GetName()</a></li>
    }
  }

</ul>
